{{#if products.length}}
<h2>Productos (hbs) </h2>
        <table class="table table-dark table-hover table-sm">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Precio</th>
                    <th scope="col">Imagen</th>
                </tr>
            </thead>
            <tbody>
            {{#each products}}
                <tr>
                    <th>{{this.id}}</th>
                    <th scope="row">{{this.title}}</th>
                    <th>{{this.price}}</th>
                    <th><img src="{{this.thumbnail}}" width="200px" height="200px"/></th>
                </tr>
            {{/each}}
            </tbody>
        </table>
{{else}}
<h2>No hay productos</h2>
{{/if}}
<a href="/">Volver al formulario</a>